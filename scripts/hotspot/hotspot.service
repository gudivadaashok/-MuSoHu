[Unit]
Description=Start Robotixx_MuSoHu WiFi Hotspot at boot
After=network-online.target NetworkManager.service
Wants=network-online.target NetworkManager.service

[Service]
Type=oneshot
ExecStartPre=/bin/sleep 10
ExecStart=/home/jetson/MuSoHu/scripts/hotspot/start-hotspot.sh
RemainAfterExit=yes
User=root
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
